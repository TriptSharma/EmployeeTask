<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form id="employee-form">

        <div class="flex-container">
            <div class="column form-group">
                <label>First Name</label>
                <input type="text" class="form-control" ng-model="newEmployee.FirstName" />
            </div>

            <div class="column form-group">
                <label>Last Name</label>
                <input type="text" class="form-control" ng-model="newEmployee.LastName" />
            </div>
        </div>

        <div class="flex-container">
            <div class="column form-group">
                <label>Date of Birth</label>
                <input type="date" class="form-control" ng-model="newEmployee.Dob"">
            </div>

            <div class="column form-group">
                <label>Gender</label>
                <br />
                Male <input type="radio" ng-value="false" class="" ng-model="newEmployee.Gender">
                Female <input type="radio" ng-value="true" class="" ng-model="newEmployee.Gender">
            </div>
        </div>

        <div class="column form-group">
            <label>Qualification</label><br />
            <select ng-model="newEmployee.QualificationId" class="form-control">
                <option value="">--Select--</option>
                <option ng-selected="q.QualificationId==newEmployee.QualificationId" ng-repeat="q in qualifications" value="{{q.QualificationId}}">
                    {{q.QualificationName}}
                </option>
            </select>
        </div>

        @*<div class="column form-group">
            <label>Qualification</label><br />
            <select ng-model="newEmployee.departmentId" ng-options="qualification.qualificationName for qualification in qualifications" class="form-control"></select>
        </div>*@

        <div class="form-group">
            <label>Date of Joining</label>
            <input type="date" class="form-control" ng-model="newEmployee.Doj"/>
        </div>

        <div class="flex-container">

            <div class="column form-group">
                <label>Department</label>
                <select ng-model="newEmployee.DepartmentId" class="form-control">
                    <option value="">--Select--</option>
                    <option ng-selected="d.DepartmentId==newEmployee.DepartmentId" ng-repeat="d in departments" value="{{d.DepartmentId}}">
                        {{d.DepartmentName}}
                    </option>
                </select>
            </div>

            <div class="column form-group">
                <label>Designation</label>
                <select ng-model="newEmployee.DesignationId" class="form-control">
                    <option value="">--Select--</option>
                    <option ng-selected="d.DesignationId==newEmployee.DesignationId" ng-repeat="d in designations" value="{{d.DesignationId}}">
                        {{d.DesignationName}}
                    </option>
                </select>
            </div>
        </div>

        <div class="column form-group">
            <label>Reporting Manager</label>
            <select ng-model="newEmployee.ManagerId" class="form-control">
                <option value="">--Select--</option>
                <option ng-selected="employee.EmployeeId==newEmployee.ManagerId" ng-repeat="employee in employees" value="{{employee.EmployeeId}}">
                    {{employee.FirstName+' '+employee.LastName}}
                </option>
            </select>
        </div>

        @Html.AntiForgeryToken()
        <div class="submit form-group">
            <span>
                <input type="submit" value={{createFormButton}} ng-if='createFormButton=="Create"' class="btn btn-success" ng-click="createEmployee()" />
                <input type="submit" value={{createFormButton}} ng-if='createFormButton=="Update"' class="btn btn-warning" ng-click="updateEmployee()" />
            </span>
            <span>
                <input type="submit" value="Cancel" class="btn btn-danger" ng-click="resetForm()" />
            </span>
        </div>


    </form>

</div>
